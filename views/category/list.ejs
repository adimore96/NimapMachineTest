<!DOCTYPE html>
<html>
<head>
  <title>Category List</title>
</head>

<%- include('../partials/navbar') %>

<body class="">
  <div class="container" style="height: calc(100vh - 130px); align-content: center;">

  
  <h2 class="mb-3 text-center">Category List</h2>
  <a href="/category/create" class="btn btn-success mb-3">Add Category</a>
  <table class="table table-bordered table-hover text-center">
    <thead class="table-dark"><tr><th>ID</th><th>Name</th><th>Actions</th></tr></thead>
    <tbody>
      <% categories.forEach(c => { %>
        <tr>
          <td><%= c.id %></td>
          <td><%= c.name %></td>
          <td>
            <a href="/category/edit/<%= c.id %>" class="btn btn-warning btn-sm">Edit</a>
            <a href="/category/delete/<%= c.id %>" class="btn btn-danger btn-sm">Delete</a>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
  </div>
</body>

 <%- include('../partials/footer') %>

</html>
